{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "noEmitHelpers": true,
        "importHelpers": true,
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "lib": [
            "es2015",
            "dom"
        ],
        "plugins": [
            { "name": "tslint-language-service"}
          ]
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "./src/**/*.ts"
    ]
}